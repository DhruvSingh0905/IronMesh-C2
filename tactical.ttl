@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix tac: <http://example.org/tactical#> .

# --- Classes (Types of things) ---
tac:Unit a rdfs:Class ;
    rdfs:comment "A military entity (Vehicle, Squad, etc.)" .

tac:Supply a rdfs:Class ;
    rdfs:comment "Consumable resources" .

# --- Properties (Attributes) ---
tac:hasLocation a rdf:Property ;
    rdfs:domain tac:Unit ;
    rdfs:range xsd:string ;
    rdfs:comment "MGRS or Lat/Long string" .

tac:hasFuelLevel a rdf:Property ;
    rdfs:domain tac:Unit ;
    rdfs:range xsd:integer ; # Stored as 0-100
    rdfs:comment "Fuel percentage" .

tac:hasAmmoStatus a rdf:Property ;
    rdfs:domain tac:Unit ;
    rdfs:range xsd:string ; # e.g., "Green", "Amber", "Red", "Black"
    rdfs:comment "Combat effectiveness based on ammo" .

tac:lastUpdated a rdf:Property ;
    rdfs:range xsd:dateTime .